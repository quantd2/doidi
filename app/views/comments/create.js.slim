- if @comment.parent_id.present?
  | $("#show_comment_#{@comment.parent_id}").closest("li").find("ul:first").prepend('
  i.fa.fa-spinner.fa-spin
  | ');
  |  $("#show_comment_#{@comment.parent_id}").closest("li").find("ul:first").prepend("
  = escape_javascript(render partial: 'comments/comment', locals: { comment: @comment } )
  | ");
  | $("#show_comment_#{@comment.parent_id}").find("form").remove();
- else
  | $("[id*='item']").siblings("ul").prepend('
  i.fa.fa-spinner.fa-spin
  | ');
  |  $("[id*='item']").siblings("ul").prepend("
  = escape_javascript(render partial: 'comments/comment', locals: { comment: @comment } )
  | ");
  | $("[id*='item']").siblings("form").find("#comment_body").val('');
